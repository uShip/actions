{
  "name": "actions",
  "version": "0.0.1",
  "description": "GitHub Actions Monorepo for uShip",
  "private": true,
  "scripts": {
    "build": "node -r esm scripts/build.js",
    "release": "auto shipit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uShip/actions.git"
  },
  "author": "Richard Simpson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/uShip/actions/issues"
  },
  "homepage": "https://github.com/uShip/actions#readme",
  "workspaces": [
    "example-action",
    "terraform-output",
    "helpers"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "npm run build --",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@actions/github": "^4.0.0",
    "@auto-it/conventional-commits": "^10.18.4",
    "@auto-it/git-tag": "^10.18.4",
    "@auto-it/released": "^10.18.4",
    "@types/node": "^14.14.33",
    "@vercel/ncc": "^0.27.0",
    "auto": "^10.18.4",
    "esm": "^3.2.25",
    "execa": "^4.1.0",
    "globby": "^7.1.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  }
}
